  "combat_damage_formula": {
    "description": "Community reverse-engineered combat formula",
    "source": "https://kingshotguides.com/guide/lethality-attack-defense-health-what-they-actually-do/",
    "formula": "Kills = sqrt(Troops) x (Attack x Lethality) / (Enemy Defense x Enemy Health) x SkillMod",
    "skill_mod_formula": "SkillMod = (DamageUp x OppDefenseDown) / (OppDamageDown x DefenseUp)",
    "insights": [
      "Attack and Lethality multiply together (equal importance)",
      "Defense and Health multiply together in the denominator",
      "Troop count scales with square root (diminishing returns)",
      "SkillMod is the most impactful factor (hero skills)"
    ]
  },
  "special_bonus_formula": {
    "source": "https://www.whiteoutsurvival.wiki/combat-stats-special-bonuses/",
    "formula": "Final Stat = (Base Combat Stats x Special Bonus) + Special Bonus",
    "example": "400% base attack with 15% bonus = (400 x 1.15) + 15 = 475%"
  },
