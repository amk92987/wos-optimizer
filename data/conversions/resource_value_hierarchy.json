  "pack_analysis_rules": {
    "exclude_from_value": ["meat", "wood", "coal", "iron"],
    "high_value_indicators": ["essence_stone", "legendary_hero_shard", "speedup_general", "life_essence"],
    "red_flags": [
      "Pack % heavily based on basic resources",
      "High price tier with same essentials as lower tier",
      "No essence stones or legendary shards in expensive pack"
    ],
    "value_formula": "real_value = Î£(quantity[i] * gem_value[i] * utility_multiplier[tier[i]])",
    "efficiency_formula": "efficiency = real_value / price_usd / 500"
  },

