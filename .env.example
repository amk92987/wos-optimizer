# Bear's Den - Environment Configuration
# Copy this file to .env and fill in your values

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false) - defaults based on ENVIRONMENT
# DEBUG=true

# Database
# Development (default): Uses SQLite at ./wos.db
# Production: Use PostgreSQL
# DATABASE_URL=postgresql://user:password@host:5432/wos_optimizer

# Authentication
# DEV_AUTO_LOGIN: Auto-login for development (true/false)
# Defaults to true in development, false in production
# DEV_AUTO_LOGIN=true

# Secret key for session signing (generate a random string for production)
# SECRET_KEY=your-secret-key-here

# AI API Keys (at least one required for AI Advisor)
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...

# Discord OAuth (for production auth)
# DISCORD_CLIENT_ID=your-client-id
# DISCORD_CLIENT_SECRET=your-client-secret
# DISCORD_REDIRECT_URI=https://yourdomain.com/auth/callback

# Admin Discord IDs (comma-separated)
# ADMIN_DISCORD_IDS=123456789,987654321

# Logging
# LOG_LEVEL=INFO
